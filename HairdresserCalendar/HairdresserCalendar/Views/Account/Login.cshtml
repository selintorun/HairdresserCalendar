@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center"><strong>Randevu Sistemi</strong></h1>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="UserName"></label>
                <span class="text-danger" asp-validation-for="UserName"></span>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <span class="text-danger" asp-for="Password"></span>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
    </div>
    <div class="col-md-4">

    </div>

</div>

