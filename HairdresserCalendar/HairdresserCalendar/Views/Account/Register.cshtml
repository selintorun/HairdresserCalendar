@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Sisteme Kaydolun</h1>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="mb-3">
                <label asp-for="UserName"></label>
                <span class="text-danger" asp-validation-for="UserName"></span>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <span class="text-danger" asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Surname"></label>
                <span class="text-danger" asp-validation-for="Surname"></span>
                <input asp-for="Surname" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Color"></label>
                <span class="text-danger" asp-validation-for="Color"></span>
                <input asp-for="Color" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <span class="text-danger" asp-for="Password"></span>
                <input asp-for="Password" class="form-control">
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsHairdresser" type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" asp-for="IsHairdresser"></label>
            </div>
            <button type="submit" class="btn btn-primary">Kaydol</button>
        </form>
    </div>
    <div class="col-md-4">

    </div>

</div>
